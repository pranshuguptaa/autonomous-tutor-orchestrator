[Unit]
Description=Autonomous AI Tutor Orchestrator
After=docker.service
Requires=docker.service

[Service]
Type=simple
User={{ app_user }}
Group={{ app_group }}
WorkingDirectory={{ app_directory }}
EnvironmentFile={{ app_directory }}/config/.env
ExecStart=/usr/bin/docker-compose -f {{ app_directory }}/docker-compose.yml up
ExecStop=/usr/bin/docker-compose -f {{ app_directory }}/docker-compose.yml down
Restart=always
RestartSec=10

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths={{ app_directory }}/logs {{ app_directory }}/data

[Install]
WantedBy=multi-user.target
